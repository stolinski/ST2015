/*------------------------------------*\
    $TABLE OF CONTENTS
\*------------------------------------*/

/**
 * Imports................Brings in Compass, Toolkit, Breakpoint, Reset, Susy2, Mixins, Variables and Components
 * Components.............Site Components
 * * Base.................Base Element Styles
 * * Typography...........Base Type Styles
 * Sections...............Page Sections
 */





/*------------------------------------*\
    $IMPORTS
\*------------------------------------*/

@import 'nib'
@import 'lost'
@import '/styl/_vars'
@import '/styl/_mixins'

normalize-css()

/*------------------------------------*\
    $BASE
\*------------------------------------*/

+above($med)
    html, body
        height: 100%

*, *:before, *:after
    box-sizing: border-box

::-moz-selection
    text-shadow: none
    color: #FFF
    trans()

::selection
    text-shadow: none
    color: #FFF
    trans()

input
    color:#333
    padding:5px
    border-radius: 4px
    fs(24px)

label
    display: block
    margin: 20px 0 5px
    fs(24px)

ul
    list-style none
    margin 0
    padding 0
    li
        margin 0

ol
    margin-top: 20px
    margin-left: 22px
    list-style: decimal
    li
        margin-bottom: 10px

h2
    fs(38px)
    margin-bottom: 30px


h3
    margin-bottom: 20px
    &.project-title
        fs(38px)
    &:after
        content: $fa-var-external-link
        font-family:'FontAwesome'
        font-size:16px
        margin-left: 10px
        opacity: 0.5

body
    background #333
    color white
    font-family 'Lato', sans-serif

video
    opacity: 0
    position: fixed
    right: 0
    bottom: 0
    min-width: 100%
    min-height: 100%
    width: auto
    height: auto
    z-index: -100
    display none
    trans()

.home video
    opacity: 0.1


+above($med)
    video
        display: block

.vid-wrap
    position: absolute
    top:55px
    z-index: 1
    height: 355px
    overflow: hidden
    width: 100%
    +above($med)
        height: 100%
        max-height: 730px
    .vid-img
        height: auto
        max-height: initial
        width: 100%

+above(1298px)
    height: auto
    max-height: initial
    width: 100%

.wrap
    +above($med)
        overflow: hidden
        position: relative
        z-index: 100
        min-height: 100%
        margin-bottom: -170px
    +above(500px)
        overflow: visible

.wrap:after
    content: ""
    display: block






/*------------------------------------*\
    $SECTIONS
\*------------------------------------*/


/*--$HEADER--*/

.header
    background: #ECF0F1
    overflow: hidden
    height: 52px
    z-index: 1000
    position: fixed
    width: 100%
    cf()

.logo
    text-transform: uppercase
    font-weight: 900
    letter-spacing: 1px
    background: $pages.home
    float: left
    color: white
    padding: 10px
    position: relative
    z-index: 100
    overflow: hidden
    fs(26px)
    &:before
        content: ''
        top: 0
        left: 52px
        height: 52px
        width: 156px
        position: absolute
        background: $pages.about
        display: block
        z-index: -1
        background-image: linear-gradient(90deg, $pages.about 33.333%, $pages.projects 33.333%, $pages.projects 66.667%, $pages.contact 66.667%)
        background-size: 156px 52px
        trans()

.about .logo:before
    left:0px

.projects .logo:before
    left:-52px

.contact .logo:before
    left:-104px

.btn
    margin:0 0 20px
    padding:10px 20px
    color:white !important
    cursor: pointer
    display: inline-block
    font-weight: 900
    fs(24px)
    border-radius: 4px
    trans()
    &:hover
        text-decoration: none !important
    &.download
        text-align: center
        background: #16A085
    &:after
        margin-left: 20px
        content:"\f019"
        font-family:'FontAwesome'

.res-download
    text-align: center

.name
    margin: 0
    position: absolute
    z-index: 10
    left: -200px
    fs(24px)
    text-decoration: none
    font-weight: 900
    line-height: 52px
    color:#333
    trans()


+above($small)
    .header:hover
        .name
            left:65px

.main-nav
    float: right
    ul
        margin 0
        padding 0
        list-style none
        cf()
    li
        float: left
    a
        text-decoration: none
        padding:15px 10px 18px
        color:#333
        font-weight: 700
        display: block
        border-bottom: 4px solid #ECF0F1
        background rgba(#000, 0)
        trans()
    a:hover
        padding-bottom: 14px
    +above($xsmall)
        a
            padding: 15px 20px 18px



/* $all_pages */
.main-content
    padding: 120px 4% 80px
    p
        fs(24px)
        margin-bottom: 20px
    a
        text-decoration: none



for $item, bgcolor in $pages
    body.{$item} nav a.{$item}
        padding-bottom:14px
        background rgba(#000, 0.1)
    a.{$item}
        border-color: bgcolor
    body.{$item} .main-content a
        color: bgcolor
        &:hover
            text-decoration: underline
    body.{$item} ::-moz-selection
        background: bgcolor
    body.{$item} ::selection
        background: bgcolor
    body.{$item} .btn
        background: bgcolor
        &:hover
          background: bgcolor - 30



/* $home */
.home
    .page-title
        margin-top:0
        font-weight: 300
        fs: 36px
        +above($med)
            margin-top: 40px
            fs: 64px





/* $about */
// Resume
.resume
    background: $footer
    width: 98%
    margin: 80px auto 50px
    font-family:"Inconsolata", monospace
    +above($med)
        width: 80%
    .fakebuttons
        background: $pages.about
        height: 7px
        width: 7px
        display: block
        border-radius: 7px
        position: relative
        top: -17px
        left:22px
        &:before, &:after
          content: ''
          background: $pages.about
          height: 7px
          width: 7px
          display: block
          border-radius: 7px
          position: relative
          top: 0
        &:before
          left: -13px
        &:after
          top: -7px
          left: 13px
    .resume-inside
        padding:16px 20px 16px
    &:before
        border-radius: 6px 6px 0 0
        content: ''
        background: $footer + 10
        width: 100%
        display: block
        height: 20px
        position: relative
        top:-4px
    &:after
        border-radius: 0 0 6px 6px
        content: ''
        background: $footer - 10
        width: 100%
        display: block
        height: 20px
        position: relative
        bottom:-4px
    h4
        color:#aaa
        margin:50px 0 20px
    h5
        color:#aaa
        margin:40px 0 6px
    .time
        margin-bottom: 10px
        display: block
        fs(13px)
        color:#aaa
    ul
        margin: 0
        +above($med)
            margin: 0 0 0 20px
    li
      margin-bottom: 15px
      color:#eee




/* $project */
.project-list
    li
        margin-top: 50px




/* $contact */
.cont a
    fs(26px)
    +above($med)
        fs(36px)




/*--$FOOTER--*/

.footer, .wrap:after
    position: relative
    z-index: 1000
    +above($med)
        height: 170px



.footer
    background: $footer
    padding:40px 4% 60px
    cf()
    a
        color:white
        text-decoration: none
    h3
        text-align: center
        +above($med)
            text-align: left




/* $social */
for $site, $bgcolor in $social
  .social
    .fa-{$site}
      background: $bgcolor
      &:hover
        background: $bgcolor - 40





.social
    text-align: center
    margin 0
    padding 0
    cf()
    .fa
        padding: 5px 8px
        border-radius: 3px
        trans()
    .text
        padding-left:10px
        font-family: 'Lato', sans-serif
    li
        margin-bottom: 20px
        +above($med)
            float: left
            + li
                margin-left: 20px
    i
        font-style normal
